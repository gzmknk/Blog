@model Blog.Models.BlogViewModels.CreateViewModel
    <div class="container-fluid">
        <h1 class="mt-4">Oluştur</h1>
        <div class="row">
            <div class="col-lg-6">
                <div class="card mb-4">
                    <form asp-controller="Blog" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div class="card-header">
                            <i class="fas fa-pen-fancy mr-1"></i>
                            Post Yaz
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="BlokHeaderImage"></label>
                                <div class="custom-file">
                                    <input asp-for="BlokHeaderImage" class="custom-file-input" accept="image/*" />
                                    <label class="custom-file-label">Dosya Seç</label>
                                </div>
                                <span asp-validation-for="BlokHeaderImage" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Blok.Title"></label>
                                <input asp-for="Blok.Title" class="form-control" required />
                                <span asp-validation-for="Blok.Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Blok.Content"></label>
                                <textarea asp-for="Blok.Content" class="form-control textarea" rows="8"></textarea>
                                <span asp-validation-for="Blok.Content" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="card-footer">
                            <div class="form-group">
                                <p class="text-muted">Taslak Olarak Kaydet </p>
                                <label>Şimdi Yayımla</label>
                                <input type="checkbox" data-toggle="toggle" asp-for="Blok.Published" />
                                <br>
                                <button class="btn btn-primary" type="submit">Yayımla</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <script src="https://cdn.ckeditor.com/ckeditor5/21.0.0/classic/ckeditor.js"></script>
        <script>
            ClassicEditor
                .create(document.querySelector('.textarea'))
                .catch(error => {
                    console.error(error);
                });
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
        </script>
    }